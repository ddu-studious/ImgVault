<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.imgvault.infrastructure.persistence.mapper.OperationLogMapper">

    <resultMap id="BaseResultMap" type="com.imgvault.domain.entity.OperationLogEntity">
        <id column="id" property="id"/>
        <result column="operation_type" property="operationType"/>
        <result column="target_type" property="targetType"/>
        <result column="target_id" property="targetId"/>
        <result column="detail" property="detail"/>
        <result column="operator_ip" property="operatorIp"/>
        <result column="created_at" property="createdAt"/>
    </resultMap>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO img_operation_log (operation_type, target_type, target_id, detail, operator_ip)
        VALUES (#{operationType}, #{targetType}, #{targetId}, #{detail}, #{operatorIp})
    </insert>

    <select id="findByTargetId" resultMap="BaseResultMap">
        SELECT * FROM img_operation_log
        WHERE target_type = #{targetType} AND target_id = #{targetId}
        ORDER BY created_at DESC
        LIMIT #{limit} OFFSET #{offset}
    </select>

    <select id="findRecent" resultMap="BaseResultMap">
        SELECT * FROM img_operation_log
        ORDER BY created_at DESC
        LIMIT #{limit}
    </select>

    <select id="countAll" resultType="int">
        SELECT COUNT(*) FROM img_operation_log
    </select>

</mapper>
